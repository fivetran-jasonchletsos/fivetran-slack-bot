{
  "display_information": {
    "name": "Fivetran Slack Bot (Socket)",
    "description": "View connector status and trigger syncs (Socket Mode)",
    "background_color": "#2eb67d"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": false,
      "messages_tab_read_only_enabled": true
    },
    "bot_user": {
      "display_name": "Fivetran Bot",
      "always_online": false
    },
    "slash_commands": [
      {
        "command": "/fivetran-status",
        "url": "",
        "description": "Show connector status",
        "usage_hint": "all | <connector-id-or-alias>",
        "should_escape": false
      },
      {
        "command": "/fivetran-sync",
        "url": "",
        "description": "Trigger a connector sync",
        "usage_hint": "<connector-id-or-alias>",
        "should_escape": false
      },
      {
        "command": "/fivetran-help",
        "url": "",
        "description": "Show help and usage",
        "usage_hint": "",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": true
  }
}


